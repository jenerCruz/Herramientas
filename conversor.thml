        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    textarea {
        width: 100%;
        height: 100px;
        font-size: 16px;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        resize: none;
    }
    button {
        display: inline-block;
        padding: 8px 12px;
        margin: 5px 0;
        background: #333;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 14px;
    }
    button:hover {
        background: #555;
    }
    .toggle-dark {
        float: right;
        margin-top: -50px;
    }
    .result {
        margin-top: 20px;
    }
    .style-block {
        margin-bottom: 15px;
        background: #f9f9f9;
        padding: 10px;
        border-radius: 5px;
    }
    .style-title {
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }
    .dark-mode {
        background: #121212;
        color: #eee;
    }
    .dark-mode .container {
        background: #1e1e1e;
        color: #eee;
    }
    .dark-mode button {
        background: #555;
    }
    .copy-btn {
        margin-left: 10px;
        font-size: 12px;
        background: #008CBA;
    }
    .copy-btn:hover {
        background: #006f98;
    }
</style>
</head>
