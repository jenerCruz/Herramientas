<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Ultra Conversor de Fuentes Unicode</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background: #f5f5f5;
        margin: 0;
        padding: 20px;
        transition: background 0.3s, color 0.3s;
    }
    h1 {
        text-align: center;
        color: #333;
    }
    .container {
        max-width: 900px;
        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    textarea {
        width: 100%;
        height: 100px;
        font-size: 16px;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        resize: none;
    }
    button {
        display: inline-block;
        padding: 8px 12px;
        margin: 5px 0;
        background: #333;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 14px;
    }
    button:hover {
        background: #555;
    }
    .toggle-dark {
        float: right;
        margin-top: -50px;
    }
    .result {
        margin-top: 20px;
    }
    .style-block {
        margin-bottom: 15px;
        background: #f9f9f9;
        padding: 10px;
        border-radius: 5px;
    }
    .style-title {
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }
    .dark-mode {
        background: #121212;
        color: #eee;
    }
    .dark-mode .container {
        background: #1e1e1e;
        color: #eee;
    }
    .dark-mode button {
        background: #555;
    }
    .copy-btn {
        margin-left: 10px;
        font-size: 12px;
        background: #008CBA;
    }
    .copy-btn:hover {
        background: #006f98;
    }
</style>
</head>
<body>

<h1>Ultra Conversor de Fuentes Unicode</h1>
<div class="container">
    <textarea id="inputText" maxlength="500" placeholder="Escribe tu texto (máx 500 caracteres)..."></textarea>
    <button onclick="convertText()">Convertir</button>
    <button class="toggle-dark" onclick="toggleDarkMode()">🌙 Modo Oscuro</button>

    <div class="result" id="resultArea"></div>
</div>

<script>
const normal = "abcdefghijklmnopqrstuvwxyz";
const fonts = {
    "Normal": null,
    "Negrita": "𝗮𝗯𝗰𝗱𝗲𝗳𝗴𝗵𝗶𝗷𝗸𝗹𝗺𝗻𝗼𝗽𝗾𝗿𝘀𝘵𝘶𝘷𝘸𝘹𝘺𝘇",
    "Cursiva": "𝘢𝘣𝘤𝘥𝘦𝘧𝘨𝘩𝘪𝘫𝘬𝘭𝘮𝘯𝘰𝘱𝘲𝘳𝘴𝘵𝘶𝘷𝘸𝘹𝘺𝘻",
    "Gótica": "𝔞𝔟𝔠𝔡𝔢𝔣𝔤𝔥𝔦𝔧𝔨𝔩𝔪𝔫𝔬𝔭𝔮𝔯𝔰𝔱𝔲𝔳𝔴𝔵𝔶𝔷",
    "Gótica Negrita": "𝖆𝖇𝖈𝖉𝖊𝖋𝖌𝖍𝖎𝖏𝖐𝖑𝖒𝖓𝖔𝖕𝖖𝖗𝖘𝖙𝖚𝖛𝖜𝖝𝖞𝖟",
    "Monoespaciado": "𝚊𝚋𝚌𝚍𝚎𝚏𝚐𝚑𝚒𝚓𝚔𝚕𝚖𝚗𝚘𝚙𝚚𝚛𝚜𝚝𝚞𝚟𝚠𝚡𝚢𝚣",
    "Burbuja": "ⓐⓑⓒⓓⓔⓕⓖⓗⓘⓙⓚⓛⓜⓝⓞⓟⓠⓡⓢⓣⓤⓥⓦⓧⓨⓩ",
    "Cuadrado": "🄰🄱🄲🄳🄴🄵🄶🄷🄸🄹🄺🄻🄼🄽🄾🄿🅀🅁🅂🅃🅄🅅🅆🅇🅈🅉",
    "Doble línea": "𝕒𝕓𝕔𝕕𝕖𝕗𝕘𝕙𝕚𝕛𝕜𝕝𝕞𝕟𝕠𝕡𝕢𝕣𝕤𝕥𝕦𝕧𝕨𝕩𝕪𝕫",
    "Script": "𝓪𝓫𝓬𝓭𝓮𝓯𝓰𝓱𝓲𝓳𝓴𝓵𝓶𝓷𝓸𝓹𝓺𝓻𝓼𝓽𝓾𝓿𝔀𝔁𝔂𝔃",
    "Pequeño (tiny)": "ᵃᵇᶜᵈᵉᶠᵍʰᶦʲᵏˡᵐⁿᵒᵖᵠʳˢᵗᵘᵛʷˣʸᶻ",
    "Super mini": "ᴀʙᴄᴅᴇꜰɢʜɪᴊᴋʟᴍɴᴏᴘꞯʀꜱᴛᴜᴠᴡxʏᴢ",
    "Subrayado": text => text.split("").join("̲"),
    "Tachado": text => text.split("").join("̶"),
    "Invertido": text => text.split("").reverse().join(""),
    "Vertical": text => text.split("").join("\n"),
    "Kawaii": text => "♡" + text.split("").join(" ♡ ") + "♡",
    "Decorado": text => "★彡" + text + "彡★"
};

function convertText() {
    const text = document.getElementById("inputText").value.toLowerCase();
    const resultArea = document.getElementById("resultArea");
    resultArea.innerHTML = "";

    for (let style in fonts) {
        let output = "";
        if (typeof fonts[style] === "function") {
            output = fonts[style](text);
        } else if (!fonts[style]) {
            output = text;
        } else {
            const fontChars = fonts[style];
            for (let char of text) {
                let index = normal.indexOf(char);
                output += index !== -1 ? fontChars[index] : char;
            }
        }
        const div = document.createElement("div");
        div.className = "style-block";
        div.innerHTML = `
            <div class="style-title">${style}:</div>
            <div>${output} 
                <button class="copy-btn" onclick="copyText('${output.replace(/'/g,"\\'")}')">Copiar</button>
            </div>`;
        resultArea.appendChild(div);
    }
}

function copyText(text) {
    navigator.clipboard.writeText(text);
    alert("Copiado: " + text);
}

function toggleDarkMode() {
    document.body.classList.toggle("dark-mode");
}
</script>

</body>
</html>